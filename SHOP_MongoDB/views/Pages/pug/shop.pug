extends layout/main-layout.pug

block content 
        main 
            //- h1 My Products
            if prods.length > 0
                .grid 
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://www.bookgeeks.in/wp-content/uploads/2022/08/A-Womans-Journey-Through-India-Madhu-Veena-Book.jpg", alt="A Book")
                            div.card__content
                                h2.product__price $19.21
                                p.product__description The Women Journey
                            div.card__actions
                                button.btn Add to cart    
            else 
                h1 No Product Found