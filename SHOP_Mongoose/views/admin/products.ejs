
<%- include('../includes/head.ejs') %>



<body>
    

<%- include('../includes/navigation.ejs') %>



<main>
    <% if (prods.length > 0) { %>
    <div class="grid">   
        <% for(let product of prods) { %>  
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title"><%= product.title %></h1>
            </header>
            <div class="card__image">
                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
            </div>
            <div class="card__content">
                <h2 class="product__price">Rs <%= product.price %></h2>
                <p class="product__description"><%= product.description %></p>
            </div>
            <div class="card__actions">
                <a href="/admin/editProduct/<%= product._id %>?edit=true" class="btn" style="width: 5rem;">Edit</a>
                <form action="/admin/deleteProduct" method="POST">
                    <input type="hidden" value="<%= product._id %>" name="productId">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">                 
                    <button class="btn" type="submit" style="width: 5rem;">Delete</button>
                </form>
            </div>
        </article>
        <% } %>
    </div>
    <% } else { %>
        <h1>No Product Found</h1>
    <% } %>
</main>



<%- include('../includes/end.ejs') %>

